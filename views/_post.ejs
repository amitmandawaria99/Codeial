<div id="post-<%= post.id %>" class="post-wrapper">
  <div class="post-header">
    <div class="post-avatar">
      <a href="">
        <% if(locals.user==undefined){ %>
          <i class="fas fa-user"></i>
          <% }else{ %>
            <img src="<%= locals.user.avatar %>" alt="logo" style="
            height: 42px;
            width: 39px;
        " />
            <% } %>
      </a>
      <div>
        <span class="post-author">
          <%= post.user.name %>
        </span>
        <span class="post-time">a minute ago</span>
      </div>
      <% if(locals.user && locals.user.id==post.user.id){ %>
        <button class="delete-btn no-btn">
          <a class="delete-post-btn" href="/posts/destroy/<%= post._id %>"><i class="fas fa-times"></i></a>
        </button>
        <% } %>
    </div>

    <div class="post-content">
      <%= post.content %>
    </div>

    <div class="post-actions">
      <button class="post-like no-btn">
        <a data-likes="<%= post.likes.length %>" class="toggle-like-button"
          href="/likes/toggle/?id=<%=post._id%>&type=Post">
          <% let flag=false %>
            <% for(let like of post.likes){ %>
              <% if(like.user==locals.user){ %>
                <% flag=true %>
                  <% } %>
                    <% } %>

                      <span>
                        <%= post.likes.length %>
                      </span>
                      <i class="fas fa-heart"></i>
        </a>
      </button>

      <div class="post-comment-icon">
        <!-- <img src="https://image.flaticon.com/icons/svg/1380/1380338.svg" alt="comments-icon"> -->
        <i class="fas fa-comment"></i>
        <span>
          <%= post.comments.length %>
        </span>
      </div>
    </div>

    <% if(locals.user){ %>
      <div class="post-comment-box">
        <form id="post-<%= post.id %>-comments-form" action="/comments/create" method="POST">
          <input type="text" name="content" placeholder="Type Here to add comment..." required>
          <input type="hidden" name="post" value="<%= post._id %>">
          <input type="submit" value="Add Comment">
        </form>
      </div>
      <%}%>

        <div id="post-comments-<%= post.id %>" class="post-comments-list">
          <% for(comment of post.comments){ %>
            <%- include('_comment') -%>
              <% } %>
        </div>
  </div>
</div>